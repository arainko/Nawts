<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.arainko.nawts.view.viewmodels.CustomizerViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/customizerRoot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:animateBackgroundColor="@{viewmodel.backgroundColor}">

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow android:id="@+id/scrollContainerVibrant" />

                <TableRow android:id="@+id/scrollContainerPastel" />

            </TableLayout>
        </HorizontalScrollView>

    </LinearLayout>
</layout>