<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.arainko.nawts.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_noteEditFragment"
            app:destination="@id/editingFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popUpTo="@+id/mainFragment" />
        <action
            android:id="@+id/action_mainFragment_to_customizationFragment"
            app:destination="@id/customizationFragment" />
    </fragment>

    <fragment
        android:id="@+id/editingFragment"
        android:name="com.arainko.nawts.fragments.NoteEditFragment"
        android:label="fragment_note_edit"
        tools:layout="@layout/fragment_note_edit" >
        <action
            android:id="@+id/action_noteEditFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
        <argument
            android:name="header"
            app:argType="string" />
        <argument
            android:name="content"
            app:argType="string" />
        <argument
            android:name="databaseId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/customizationFragment"
        android:name="com.arainko.nawts.CustomizationFragment"
        android:label="fragment_customization"
        tools:layout="@layout/fragment_customization" />

</navigation>